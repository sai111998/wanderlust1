<% layout ("layouts/boilerplate.ejs")%>
<!-- <br><br/> -->
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <h3>Create new listings</h3>
      <form
        method="POST"
        action="/listings"
        class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
          <label for="decription" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description cannot be empty</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>
        <div class="col-6 width">
          <label for="category" class="form-label">Category</label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="listing[category]"
          >
            <option selected>Select Category</option>
            <option value="trending">Trending</option>
            <option value="room">Rooms</option>
            <option value="iconic">Iconic City</option>
            <option value="mountain">Mountains</option>
            <option value="castle">Castle</option>
            <option value="pool">Pool</option>
            <option value="farm">Farms</option>
            <option value="eco">Eco</option>
            <option value="boat">Boats</option>
            <option value="skiing">Skiing</option>
            <option value="arctic">arctic</option>

          </select>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price cannot be empty</div>
          </div>
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input
              name="listing[country]"
              placeholder="Enter country"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country cannot be empty</div>
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-label">Location</lable>
          <input
            name="listing[location]"
            placeholder="Enter location"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location cannot be empty</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br /><br />
      </form>
    </body>
  </div>
</div>
